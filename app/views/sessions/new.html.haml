%section.sign_in.container
  .row
    .col-sm-3
    .col-sm-4.col-sm-offset-1
      = bootstrap_form_tag url: sessions_path do |f|
        %header
          %h1 Sign In
        %fieldset
          = f.email_field :email
          = f.password_field :password
          = f.submit 'Sign In'
          = link_to 'Forgot Password?', forgot_password_path
